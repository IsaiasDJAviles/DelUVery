<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/img_carrito_producto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="Imagen del producto"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Información del producto -->
        <TextView
            android:id="@+id/tv_carrito_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Nombre del producto"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/btn_eliminar"
            app:layout_constraintStart_toEndOf="@id/img_carrito_producto"
            app:layout_constraintTop_toTopOf="@id/img_carrito_producto" />

        <TextView
            android:id="@+id/tv_carrito_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/tv_carrito_nombre"
            app:layout_constraintStart_toStartOf="@id/tv_carrito_nombre"
            app:layout_constraintTop_toBottomOf="@id/tv_carrito_nombre" />

        <TextView
            android:id="@+id/tv_carrito_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="$0.00"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_carrito_descripcion"
            app:layout_constraintTop_toBottomOf="@id/tv_carrito_descripcion" />

        <!-- Botón eliminar -->
        <ImageButton
            android:id="@+id/btn_eliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Controles de cantidad -->
        <LinearLayout
            android:id="@+id/layout_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tv_carrito_nombre"
            app:layout_constraintTop_toBottomOf="@id/tv_carrito_precio">

            <ImageButton
                android:id="@+id/btn_decrementar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Disminuir cantidad"
                android:src="@android:drawable/ic_delete"
                android:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tv_carrito_cantidad"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_incrementar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Aumentar cantidad"
                android:src="@android:drawable/ic_input_add"
                android:tint="@color/primary_blue" />

        </LinearLayout>

        <!-- Subtotal -->
        <TextView
            android:id="@+id/tv_carrito_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/accent_green"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/layout_cantidad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_cantidad" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>