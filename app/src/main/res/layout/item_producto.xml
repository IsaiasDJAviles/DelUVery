<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_product"
    android:layout_marginBottom="16dp"
    android:padding="16dp">

    <!-- Nombre del Producto -->
    <TextView
        android:id="@+id/tv_producto_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto_1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tv_producto_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_producto_nombre"
        android:layout_marginTop="8dp"
        android:text="@string/descripcion"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center" />

    <!-- Botón de Precio -->
    <Button
        android:id="@+id/btn_precio"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_producto_descripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_blue"
        android:text="@string/precio"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>