<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Seccion Lugar de Entrega -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lugar de entrega"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejemplo: Salon 201, Edificio A"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_lugar_entrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Salon, edificio, punto de referencia..."
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- SECCION ANOTACIONES -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Anotaciones del pedido (opcional)"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrucciones especiales para tu pedido"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_anotaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Ej: Sin cebolla, extra salsa..."
        android:inputType="textMultiLine"
        android:minHeight="80dp"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="16sp"
        android:lines="3"
        android:maxLines="4" />

    <!-- Nota final -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="El repartidor te contactara para coordinar la entrega"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:gravity="center" />

</LinearLayout>