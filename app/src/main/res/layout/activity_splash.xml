<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".activities.SplashActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/img_splash_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/duck_logo_clean"
        android:contentDescription="Logo DelUVery"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Nombre de la App -->
    <TextView
        android:id="@+id/tv_splash_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="DelUVery"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:alpha="0"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_splash_logo" />

    <!-- Slogan -->
    <TextView
        android:id="@+id/tv_splash_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tu comida, en tu campus"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_name" />

    <!-- Version o creditos (opcional, al fondo) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Universidad Veracruzana"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>