<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DelUVery"
        tools:targetApi="31">

        <!-- Splash Screen - Primera pantalla que se muestra -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>

        <!-- Actividad de Login -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <!-- AGREGAR ESTA: Actividad de Signup/Registro -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false" />

        <!-- Actividad de Perfil -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:label="Mi Perfil"
            android:parentActivityName=".MainActivity" />

        <!-- Activity de Locales Disponibles -->
        <activity
            android:name=".activities.LocalesDisponiblesActivity"
            android:exported="false"
            android:label="Locales Disponibles"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Locales -->
        <activity
            android:name=".activities.LocalesActivity"
            android:exported="false"
            android:label="Locales"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Menu -->
        <activity
            android:name=".activities.MenuActivity"
            android:exported="false"
            android:label="Menu"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Carrito -->
        <activity
            android:name=".activities.CarritoActivity"
            android:exported="false"
            android:label="Carrito"
            android:parentActivityName=".activities.MenuActivity" />

        <!-- Actividad de Pedidos -->
        <activity
            android:name=".activities.PedidosActivity"
            android:exported="false"
            android:label="Mis Pedidos"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Repartos -->
        <activity
            android:name=".activities.RepartosActivity"
            android:exported="false"
            android:label="Pedidos Disponibles"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Repartidores -->
        <activity
            android:name=".activities.RepartidoresActivity"
            android:exported="false"
            android:label="Repartidores"
            android:parentActivityName=".MainActivity" />

        <!-- Actividad de Navegacion Entrega -->
        <activity
            android:name=".activities.NavegacionEntregaActivity"
            android:exported="false"
            android:label="Navegacion"
            android:parentActivityName=".activities.RepartosActivity" />

        <!-- Actividad de Escanear QR -->
        <activity
            android:name=".activities.EscanearQRActivity"
            android:exported="false"
            android:label="Escanear QR"
            android:parentActivityName=".activities.PedidosActivity" />

        <!-- Activity de Seguimiento de Pedido para el Cliente -->
        <activity
            android:name=".activities.SeguimientoPedidoActivity"
            android:exported="false"
            android:label="Seguimiento de Pedido"
            android:parentActivityName=".activities.PedidosActivity" />

    </application>

</manifest>